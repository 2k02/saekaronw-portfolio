---
import { Image } from 'astro:assets'
import bannerImage from '../images/banner.jpg'
---

<section class="banner" data-scroll-section>
  <div class="container">
    <div class="banner__background">
      <Image class="banner__image" src={bannerImage} alt="background-coding" />
    </div>
    <div class="banner__box">
      <span class="content">
        <p class="content__span">de</p>
        <p class="content__span" style="color: #f00;">love</p>
        <p class="content__span">per</p>
        <p class="content__description">
          Hello, I am a recently graduated software developer, I am looking to
          share and acquire knowledge about the career.
        </p>
      </span>
    </div>
  </div>
</section>

<style>
  .banner {
    
    .banner__background {
      width: 100%;
      height: 100%;

      .banner__image {
        border-radius: var(--border-radius);
        width: 100%;
        object-fit: cover;
        height: inherit;
      }
    }

    .banner__box {
      width: 50%;
      height: 100%;
      background-color: var(--bg-white);
      position: absolute;
      top: 0;
      right: 0;
      border-start-end-radius: var(--border-radius);
      border-end-end-radius: var(--border-radius);
      display: flex;
      align-items: center;
      color: var(--text-black);
      padding-inline: 20px;
      mix-blend-mode: screen;

      .content {
        width: 100%;
        position: relative;

        .content__span {
          font-size: 12vw;
          line-height: 9vw;
          font-weight: 900;
          text-transform: uppercase;
        }

        .content__description {
          max-width: 350px;
          position: absolute;
          padding: 10px;
          text-wrap: wrap;
        }
      }
    }
  }
</style>
