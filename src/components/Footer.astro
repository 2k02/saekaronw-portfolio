---
const isVisible = Astro.url.pathname === '/' ? true : false
---

<footer>
  <div class="container">
    <div class="footer__content">
      <span>&copy; {new Date().getFullYear().toString()} Paul Torres</span>
      {isVisible && <span>next</span>}
    </div>
  </div>
</footer>

<style>
  footer {
    padding-block: 20px;

    .footer__content {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
  }

  @media (200px <= width <= 600px) {
    .footer__content {
      & span:nth-child(2) {
        display: none;
      }
    }
  }
</style>
